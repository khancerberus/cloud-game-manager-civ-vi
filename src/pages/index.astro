---
import Layout from '../layouts/Layout.astro'
import Table from '../components/Table.astro'

const testDate = new Date('2024-09-03T01:15:00Z')

const games = [
    {
        gameName: 'Game 1',
        players: [
            {
                playerId: '72ed82b0-7955-4eb9-a7cc-f882d24d177a',
                playerName: 'Pelao',
                discordId: 523998904912707600n
            }
        ],
        turnNumber: 1,
        lastTurnDate: testDate,
        totalSeconds: 0,
        finished: false
    }
]
---

<Layout title="Welcome to Astro.">
    <main class="flex flex-col justify-center px-5">
        <header class="flex flex-col justify-center items-center p-5">
            <h1 class="font-bold">Cloud Game Manager</h1>
            <h2 class="font-bold text-gradient">Civilizations VI</h2>
        </header>

        <Table value={games} />
    </main>
</Layout>

<style>
    .astro-a {
        position: absolute;
        top: -32px;
        left: 50%;
        transform: translatex(-50%);
        width: 220px;
        height: auto;
        z-index: -1;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .instructions {
        margin-bottom: 2rem;
        border: 1px solid rgba(var(--accent-light), 25%);
        background: linear-gradient(
            rgba(var(--accent-dark), 66%),
            rgba(var(--accent-dark), 33%)
        );
        padding: 1.5rem;
        border-radius: 8px;
    }
    .instructions code {
        font-size: 0.8em;
        font-weight: bold;
        background: rgba(var(--accent-light), 12%);
        color: rgb(var(--accent-light));
        border-radius: 4px;
        padding: 0.3em 0.4em;
    }
    .instructions strong {
        color: rgb(var(--accent-light));
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }
</style>
